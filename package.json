{
	"name": "@kbotdev/utilities",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"update": "yarn upgrade-interactive",
		"build": "turbo run build",
		"test": "turbo run test",
		"lint": "turbo run lint",
		"format": "turbo run format"
	},
	"devDependencies": {
		"@kbotdev/eslint-config": "workspace:^",
		"@kbotdev/prettier-config": "workspace:^",
		"@kbotdev/ts-config": "workspace:^",
		"@types/node": "^20.3.0",
		"eslint": "^8.42.0",
		"husky": "^8.0.3",
		"lint-staged": "^13.2.2",
		"prettier": "^2.8.8",
		"turbo": "^1.10.3",
		"typescript": "^5.1.3",
		"vitest": "^0.32.0"
	},
	"lint-staged": {
		"*.{mjs,cjs,js,ts}": [
			"eslint --fix --ext js,ts",
			"prettier --write --loglevel=warn \"**/*.{mjs,cjs,js,ts}\""
		],
		"*.{json,yml,yaml,md}": [
			"prettier --write --loglevel=warn \"**/*.{json,yml,yaml,md}\""
		]
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"packageManager": "yarn@3.6.0"
}
