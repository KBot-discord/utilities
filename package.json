{
	"name": "@kbotdev/utilities",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"build": "turbo run build",
		"test": "turbo run ci:test",
		"lint": "turbo run ci:lint",
		"format": "turbo run format"
	},
	"devDependencies": {
		"@kbotdev/eslint-config": "workspace:^",
		"@kbotdev/prettier-config": "workspace:^",
		"@kbotdev/ts-config": "workspace:^",
		"@types/node": "^18.15.11",
		"eslint": "^8.38.0",
		"husky": "^8.0.3",
		"lint-staged": "^13.2.1",
		"prettier": "^2.8.7",
		"turbo": "^1.9.1",
		"typescript": "^4.9.5",
		"vitest": "^0.31.0"
	},
	"lint-staged": {
		"*.{mjs,cjs,js,ts}": [
			"eslint --fix --ext js,ts",
			"prettier --write --loglevel=warn \"**/*.{mjs,cjs,js,ts}\""
		],
		"*.{json,yml,yaml,md}": [
			"prettier --write --loglevel=warn \"**/*.{json,yml,yaml,md}\""
		]
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"packageManager": "yarn@3.6.0"
}
