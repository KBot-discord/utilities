{
	"name": "@kbotdev/utilities",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"update": "yarn upgrade-interactive",
		"dd": "yarn dedupe --strategy highest",
		"build": "turbo run build",
		"test": "turbo run test",
		"lint": "turbo run lint",
		"format": "turbo run format"
	},
	"devDependencies": {
		"@kbotdev/eslint-config": "workspace:^",
		"@kbotdev/prettier-config": "workspace:^",
		"@kbotdev/ts-config": "workspace:^",
		"@types/node": "^20.10.7",
		"eslint": "^8.56.0",
		"husky": "^9.0.0",
		"lint-staged": "^15.2.0",
		"prettier": "^3.1.1",
		"turbo": "^1.11.3",
		"typescript": "^5.3.3",
		"vitest": "^1.1.3"
	},
	"lint-staged": {
		"*.{mjs,cjs,js,ts}": [
			"eslint --fix --ext js,ts",
			"prettier --write --loglevel=warn \"**/*.{mjs,cjs,js,ts}\""
		],
		"*.{json,yml,yaml,md}": [
			"prettier --write --loglevel=warn \"**/*.{json,yml,yaml,md}\""
		]
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"packageManager": "yarn@4.0.2"
}
