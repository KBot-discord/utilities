{
  "name": "@kbotdev/utilities",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build --no-daemon",
    "test": "turbo run ci:test --no-daemon",
    "lint": "turbo run ci:lint --no-daemon",
    "format": "turbo run format --no-daemon",
    "docs": "turbo run docs --no-daemon"
  },
  "devDependencies": {
    "@microsoft/tsdoc": "^0.14.2",
    "@sapphire/eslint-config": "^4.3.8",
    "@sapphire/framework": "^4.0.1",
    "@sapphire/prettier-config": "^1.4.5",
    "@sapphire/ts-config": "^3.3.4",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "@vitest/coverage-c8": "^0.27.1",
    "discord-api-types": "^0.37.28",
    "discord.js": "^14.7.1",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.3",
    "tsup": "^6.5.0",
    "turbo": "^1.7.0",
    "typedoc": "^0.23.24",
    "typescript": "^4.9.4",
    "vitest": "^0.27.1"
  },
  "lint-staged": {
    "*.{mjs,ts,js}": [
      "eslint --fix --ext mjs,js,ts",
      "prettier --write --loglevel=warn \"{src,tests}/**/*.{js,ts,json}\""
    ]
  },
  "prettier": "@sapphire/prettier-config",
  "packageManager": "yarn@3.3.1"
}
